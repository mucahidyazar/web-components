{
  "packages": [
    "src/packages/*"
  ],
  "version": "1.0.6",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "registry": "https://registry.npmjs.org",
      "conventionalCommits": true,
      "message": "chore(release): Version bumped %s",
      "ignoreChanges": [
        "**/stories/**",
        "**/tests/**"
      ],
      "allowBranch": "main"
    }
  }
}
